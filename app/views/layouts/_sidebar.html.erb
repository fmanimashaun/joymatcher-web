<aside class="hidden md:flex text-white px-4 py-5">
  <ul class="space-y-5 w-full">
    <li class="<%= current_page?(root_path) ? 'bg-red-500 text-white' : 'text-black' %> rounded-lg w-full px-2 xl:px-4 py-2">
      <%= link_to root_path, class: "flex items-center space-x-6" do %>
        <% if current_page?(root_path) %>
          <%= inline_svg "Send-white.svg", class: "h-5 w-5" %>
        <% else %>
          <%= inline_svg "Send-black.svg", class: "h-5 w-5" %>
        <% end %>
        <span class="hidden xl:block">Online Now</span>
      <% end %>
    </li>

    <li class="<%= current_page?(likes_path) ? 'bg-red-500 text-white' : 'text-black' %> rounded-lg w-full px-2 xl:px-4 py-2">
       <%= link_to likes_path, class: "flex items-center space-x-6" do %>
        <% if current_page?(likes_path)%>
          <%= inline_svg "Likes-white.svg", class: "h-5 w-5" %>
        <% else %>
          <%= inline_svg "Likes-black.svg", class: "h-5 w-5" %>
        <% end %>
        <span class="hidden xl:block">Likes</span>
      <% end %>
    </li>

    <li class="<%= current_page?(matches_path) ? 'bg-red-500 text-white' : 'text-black' %> rounded-lg w-full px-2 xl:px-4 py-2">
      <%= link_to matches_path, class: "flex items-center space-x-6" do %>
        <% if current_page?(matches_path)%>
          <%= inline_svg "Match-white.svg", class: "h-5 w-5" %>
        <% else %>
          <%= inline_svg "Match-black.svg", class: "h-5 w-5" %>
        <% end %>
        <span class="hidden xl:block">Matches</span>
      <% end %>
    </li>

    <li class="<%= current_page?(edit_settings_path) ? 'bg-red-500 text-white' : 'text-black' %> rounded-lg w-full px-2 xl:px-4 py-2">
     <%= link_to edit_settings_path, class: "flex items-center space-x-6" do %>
        <% if current_page?(edit_settings_path) %>
          <%= inline_svg "Setting-white.svg", class: "h-5 w-5" %>
        <% else %>
          <%= inline_svg "Setting-black.svg", class: "h-5 w-5" %>
        <% end %>
        <span class="hidden xl:block">Settings</span>
      <% end %>
    </li>
  
    <li class="<%= current_page?(upgrades_path) ? 'bg-red-500 text-white' : 'text-black' %> hidden rounded-lg w-full px-2 xl:px-4 py-2">
      <%= link_to "Upgrade", upgrades_path, class: "" %>
    </li>
    <li class="<%= current_page?(destroy_user_session_path) ? 'bg-red-500 text-white' : 'text-black' %> hidden rounded-lg w-full px-2 xl:px-4 py-2">
      <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "" %>
    </li>
  </ul>
</aside>